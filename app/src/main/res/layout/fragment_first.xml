<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.achilles.akhilraj.logit.FirstFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add New Log"
            android:id="@+id/addnewlogbtnfragment1"
            android:layout_gravity="center_horizontal|top"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#f65b5b"
            android:layout_margin="5dp" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/firstfragmentlistview1"
            >
        </ListView>
    </LinearLayout>


</FrameLayout>
